<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linear_layout"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/color_primary">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:src="@drawable/round_pic"
        android:layout_gravity="center|center_horizontal"
        android:layout_margin="@dimen/activity_textSize_large"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/view_margin"
        android:textSize="@dimen/activity_textSize_large"
        android:textStyle="bold"
        android:textColor="@color/color_white"/>

</LinearLayout>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_splash_copy_right"
    android:layout_gravity="bottom|center_horizontal"
    android:gravity="bottom|center"
    android:layout_margin="@dimen/view_margin"
    android:textSize="@dimen/activity_textSize_small_14"
    android:textColor="@color/black"/>

</FrameLayout>
